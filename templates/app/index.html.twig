                    <i class="fa-solid fa-star text-warning"></i>
                    <i class="fa-solid fa-star text-warning"></i>
                    <i class="fa-solid fa-star text-warning"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="w-full bg-neutral-900 text-neutral-content mt-10 pt-10 pb-32">
        <h1 class="text-5xl w-full text-center mb-10">Nos coordonnées</h1>

        <div class="flex flex-col min-[1040px]:flex-row min-[1040px]:gap-6 min-[1040px]:px-10">
            <div class="flex justify-center flex-auto min-w-[600px]">
                <iframe src="{{ contactInformation('map') }}"
                        width="600"
                        height="450"
                        style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

            <div class="flex-auto mt-10 min-[1040px]:mt-0 text-center min-[1040px]:text-start" id="contact">
                <div class="w-full mb-2">
                    <ul class="list-none">
                        <li class="mb-6 text-base"><span class="font-bold">Téléphone</span>: {{ contactInformation('tel') }}</li>
                        <li class="mb-6 text-base"><span class="font-bold">E-mail</span>: <a href="mailto:{{ contactInformation('mail') }}">{{ contactInformation('mail') }}</a></li>
                        <li class="mb-6 text-base"><span class="font-bold">Adresse</span> :  {{ contactInformation('adresse') }}</li>
                    </ul>
                </div>

                <div class="px-24 w-full flex flex-col min-[1040px]:px-0">
                    <p class="text-2xl underline underline-offset-8 mb-2">Horaires d'ouverture</p>
                    <table class="table table-sm w-96 max-[1040px]:m-auto">
                        {% for op in openings %}
                            <tr class="border-0 hover hover:text-slate-800">
                                <td>{{ op.day }}</td>
                                <td>{{ op.morning }}</td>
                                <td>{{ op.afternoon }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}