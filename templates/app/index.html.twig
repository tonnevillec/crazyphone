{% extends 'base.html.twig' %}

{% block title %}Crazy phone - Atelier de réparation de smartphones{% endblock %}

{% block body %}
    <div class="h-[48rem]">
        <div class="hero min-h-full" style="background-image: url({{ asset('build/images/20230720_142052.jpg')}});">
            <div class="hero-overlay"></div>
            <div class="hero-content text-center text-neutral-content mt-96">
                <div class="w-full">
                    <h1 class="mb-5 text-5xl font-bold drop-shadow-xl">Atelier de réparation de smarphones</h1>

                    {% for social in tSocials() %}
                        <a class="btn btn-link bg-transparent me-1 hover:rounded border-transparent hover:border-white"
                           href="{{ social.url }}"
                           title="{{ social.name }}"
                           target="_blank">
                            <i class="{{ social.logo }} fa-2x text-white"></i>
                        </a>
                    {% endfor %}

                    <a class="btn btn-link bg-transparent me-1 hover:rounded border-transparent hover:border-white"
                        href="mailto:{{ contactInformation('mail') }}"
                       title="Contact par email"
                    >
                        <i class="fa-regular fa-envelope fa-2x text-white"></i>
                    </a>

                    <a class="btn btn-link bg-transparent me-1 hover:rounded border-transparent hover:border-white"
                       href="#contact"
                       title="SMS au {{ contactInformation('tel') }}"

                    >
                        <i class="fa-solid fa-mobile-screen fa-2x text-white"></i>
                    </a>

                </div>
            </div>
        </div>
    </div>

    <div class="w-full bg-neutral-900 text-neutral-content py-10">
        <h1 class="text-5xl w-full text-center mb-10">Nos services</h1>

        <div class="grid lg:grid-cols-3 gap-6">
            <div class="w-full pl-5 lg:col-span-2 lg:pl-10">
                <div class="flex">
                    <div class="hidden lg:block xl:w-1/5"></div>
                    <div class="w-full xl:w-3/5">

                        {% for service in services %}
                            <div class="chat w-full chat-start mb-3">
                                <div class="chat-image avatar">
                                    <div class="w-10 rounded-full">
                                        <img src="https://picsum.photos/320/240?random={{ service.id }}"  alt="{{ service.title }}"/>
                                    </div>
                                </div>
                                <div class="chat-bubble bg-white text-slate-800 w-full text-2xl">{{ service.title }}</div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="hidden lg:block xl:w-1/5"></div>
                </div>
            </div>

            <div class=" flex justify-end">
                <div class="mockup-phone">
                    <div class="camera"></div>
                    <div class="display">
                        <div class="artboard artboard-demo phone-1">
                            <div class="chat w-full chat-start mb-2">
                                <div class="chat-image avatar">
                                    <div class="w-10 rounded-full">
                                        <img src="https://picsum.photos/320/240?random=5" alt="avatar Mme Michue" />
                                    </div>
                                </div>
                                <div class="chat-bubble bg-white text-current w-full">Bonjour, Que proposez vous comme service?</div>
                            </div>

                            <div class="chat w-full chat-end mb-2">
                                <div class="chat-image avatar">
                                    <div class="w-10 rounded-full">
                                        <img src="https://picsum.photos/320/240?random=1" alt="avatar CrazyPhone" />
                                    </div>
                                </div>
                                <div class="chat-bubble bg-white text-current w-full">Bonjour,<br/>On fait de la réparation express de vos Smartphones</div>
                            </div>

                            <div class="chat w-full chat-start mb-2">
                                <div class="chat-image avatar">
                                    <div class="w-10 rounded-full">
                                        <img src="https://picsum.photos/320/240?random=2" alt="avatar Mme Michue" />
                                    </div>
                                </div>
                                <div class="chat-bubble bg-white text-current w-full">Et c'est tout??</div>
                            </div>

                            <div class="chat w-full chat-end mb-2">
                                <div class="chat-image avatar">
                                    <div class="w-10 rounded-full">
                                        <img src="https://picsum.photos/320/240?random=4" alt="avatar CrazyPhone" />
                                    </div>
                                </div>
                                <div class="chat-bubble bg-white text-current w-full">Non!!<br/>Ecran cassé ? Batterie épuisée ? Iphone bloqué ?<br/>Vous pouvez venir nous voir</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="relative w-full h-[400px]">
        <img src="https://picsum.photos/1280/400?random=8'" class="object-cover h-[400px] w-full" />
        <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
            <a href="#slide4" class="btn btn-circle">❮</a>
            <a href="#slide2" class="btn btn-circle">❯</a>
        </div>
    </div>

    <div class="w-full flex justify-center">
        <a href="{{ path('app_shop') }}" class="btn btn-primary text-2xl mt-[-20px] z-[10] shadow-xl">
            <i class="fa-solid fa-cart-shopping mr-2"></i>Parcourir la boutique
        </a>
    </div>

    <div class="w-full p-10 min-h-[450px]">
