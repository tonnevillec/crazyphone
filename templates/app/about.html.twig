{% extends 'base.html.twig' %}

{% block title %}Crazy phone - A propos de nous{% endblock %}

{% block body %}
    <div class="h-[26rem] mt-16">
        <div class="hero min-h-full" style="background-image: url({{ asset('build/images/crazyphone3.jpg') }});">
            <div class="hero-overlay bg-opacity-60"></div>
            <div class="hero-content text-center text-neutral-content">
                <div class="max-w-md">
                    <h1 class="mb-5 text-5xl font-bold">A propos de nous</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5 mb-20 px-5 md:px-10 xl:px-20">
        <div class="section-heading style-2 mb-7 w-full mt-10">
            <h2 class="text-xl md:text-3xl mb-2">
                <i class="fa-solid fa-envelope text-primary mr-3"></i>Qui sommes nous ?
            </h2>
            <div class="line"></div>
        </div>

        <div class="flex flex-col md:flex-row w-full gap-6">
            <div class="md:basis-1/3">
                <img src="{{ asset('uploads/' ~ about.image ) }}" class="" alt="Image de prÃ©sentation" />
            </div>

            <div class="md:basis-2/3">
                {{ about.description|raw }}
            </div>
        </div>
    </div>

    <div class="mt-5 mb-20 px-5 md:px-10 xl:px-20">
        <div class="section-heading style-2 mb-7 w-full mt-10">
            <h2 class="text-xl md:text-3xl mb-2">
                <i class="fa-solid fa-envelope text-primary mr-3"></i>L'atelier
            </h2>
            <div class="line"></div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 {% if pictures|length >= 4 %}xl:grid-cols-4{% endif%} gap-6">
            {% for picture in pictures %}
                <div>
                    <img class="h-auto max-w-full rounded-lg"
                         src="{{ asset('uploads/' ~ picture.image) }}"
                         alt="{{ picture.alt }}"
                    />
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}